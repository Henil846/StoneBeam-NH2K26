        {
            "src": "icons/icon-512x512.png",
            "sizes": "512x512",
            "type": "image/png",
            "purpose": "maskable"
        }
    ],
    "shortcuts": [
        {
            "name": "New Project",
            "short_name": "New Project",
            "description": "Create a new construction project",
            "url": "/new-project.html",
            "icons": [
                {
                    "src": "icons/shortcut-new-project.png",
                    "sizes": "96x96"
                }
            ]
        },
        {
            "name": "View Quotes",
            "short_name": "Quotes",
            "description": "View your construction quotes",
            "url": "/view-quotations.html",
            "icons": [
                {
                    "src": "icons/shortcut-quotes.png",
                    "sizes": "96x96"
                }
            ]
        },
        {
            "name": "Find Contractors",
            "short_name": "Contractors",
            "description": "Find local contractors",
            "url": "/contractors.html",
            "icons": [
                {
                    "src": "icons/shortcut-contractors.png",
                    "sizes": "96x96"
                }
            ]
        }
    ],
    "screenshots": [
        {
            "src": "screenshots/desktop-1.png",
            "sizes": "1280x720",
            "type": "image/png",
            "form_factor": "wide"
        },
        {
            "src": "screenshots/mobile-1.png",
            "sizes": "375x667",
            "type": "image/png",
            "form_factor": "narrow"
        }
    ],
    "related_applications": [],
    "prefer_related_applications": false,
    "edge_side_panel": {
        "preferred_width": 400
    },
    "launch_handler": {
        "action_url": "/?action=new-project"
    },
    "protocol_handlers": [
        {
            "protocol": "web+stonebeam",
            "url": "/handle-protocol?type=%s"
        }
    ],
    "share_target": {
        "action": "/share-handler",
        "method": "POST",
        "enctype": "multipart/form-data",
        "params": {
            "title": "project_title",
            "url": "project_url",
            "description": "project_description"
        }
    },
    "file_handlers": [
        {
            "action": "/open-project-file",
            "accept": {
                "application/json": [
                    ".json",
                    ".sbproj"
                ]
            }
        }
    ]
}